%div{style: "font-family: sans-serif;"}

  %div{style:'margin-bottom: 0px;font-size: 30px;'}
    %div{style:'margin-bottom:10px;'}
      = Date.current.strftime("%m/%d/%Y")
    

  %div
    %h1{style:'margin-top:45px;margin-bottom:50px;font-size:180px;text-align:center;'}
      SERVICE
      %br
      HOLD

  %div{style:'margin-bottom: 0px;font-size: 30px;'}
    %div{style:'margin-bottom:10px;'}
      = @vehicle.stock_number
    %div{style:'margin-bottom:10px;'}
      %span{style: 'margin-right: 145px;'}
        = @vehicle.model
      %span
        = @vehicle.color
        
= wicked_pdf_image_tag 'logo_black_small.png', style: 'position:absolute; width: 100px; top: 10px; right: 20px;'

= image_tag html_barcode(@vehicle.vin || "VIN"), style: 'width: 350px;position: absolute; right: 20px;bottom: 20px;'
%tr{class: (deal.is_used ? 'text-green' : 'text-blue').to_s}
  %td
    = link_to edit_deal_path(deal) do
      %i.fa.fa-pencil.edit-icon
  %td= deal.client_last_name
  
  %td= deal.stock_number
  
  %td= deal.source
  
  - if deal.is_used
    %td
    %td
      = deal.make
      = deal.model
      = deal.year
  - else
    %td
      = deal.make
      = deal.model
      = deal.year
    %td

  %td= deal.trade
  %td= deal.sales_rep
  %td= deal.split_rep
  %td= deal.city
  %td= deal.result
  - klass = (deal.report_status.in?(["Not RDR'd", "Not RDR'd Supp/Part", "Need to X"]) ? 'text-danger' : '')
  %td{class: klass}
    = deal.report_status
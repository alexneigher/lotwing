#header
  = wicked_pdf_image_tag 'dealer_logo.png'

.left-col

  .client-last-name= @deal.client_last_name

  %div{style: 'margin-top: 30px;'}
    = "#{@deal.year} #{@deal.make} #{@deal.model}"
  
  %div{style: 'margin-top: 120px;'}
    %div{style: 'width:30%;display:inline-block;'}
      %div{style: 'border:1px solid #e0e0e0;padding: 20px 25px;'}
        = @deal.deal_number
      %div{style: 'font-size: 50px;'}
        Deal Number
    %div{style: 'width:30%;display:inline-block;'}
      %div{style: 'border:1px solid #e0e0e0;padding: 20px 25px;'}
        = @deal.stock_number
      %div{style: 'font-size: 50px;'}
        Stock Number
    %div{style: 'width:30%;display:inline-block;'}
      %div{style: 'border:1px solid #e0e0e0;padding: 20px 25px;'}
        = Date.current.strftime("%m/%d/%Y")
      %div{style: 'font-size: 50px;'}
        Date

  %div{style: 'margin-top: 50px;'}
    %div{style: 'width:30%;display:inline-block;'}
      %div{style: 'border:1px solid #e0e0e0;padding: 20px 25px;'}
        = @deal.deal_type
      %div{style: 'font-size: 50px;'}
        Deal Type

  %div{style: 'margin-top: 50px;'}
    %div{style: 'width:30%;display:inline-block;'}
      %div{style: 'border:1px solid #e0e0e0;padding: 20px 25px;'}
        = number_to_currency(@deal.selling_price)
      %div{style: 'font-size: 50px;'}
        Selling Price

  %div{style: 'margin-top: 50px;'}
    %div{style: 'width:30%;display:inline-block;'}
      %div{style: 'border:1px solid #e0e0e0;padding: 20px 25px;'}
        = number_to_currency(@deal.trade_allowance)
      %div{style: 'font-size: 50px;'}
        Trade Allowance

  %div{style: 'margin-top: 50px;'}
    %div{style: 'width:30%;display:inline-block;'}
      %div{style: 'border:1px solid #e0e0e0;padding: 20px 25px;'}
        = number_to_currency(@deal.trade_acv)
      %div{style: 'font-size: 50px;'}
        Trade ACV

  %div{style: 'margin-top: 50px;'}
    %div{style: 'width:30%;display:inline-block;'}
      %div{style: 'border:1px solid #e0e0e0;padding: 20px 25px;'}
        = @deal.trade_bank_name
      %div{style: 'font-size: 50px;'}
        Trade Bank Name

  %div{style: 'margin-top: 50px;'}
    %div{style: 'width:30%;display:inline-block;'}
      %div{style: 'border:1px solid #e0e0e0;padding: 20px 25px;'}
        = number_to_currency(@deal.trade_payoff_amount)
      %div{style: 'font-size: 50px;'}
        Trade Payoff Amount

  %div{style: 'margin-top: 50px;'}
    %div{style: 'width:30%;display:inline-block;'}
      %div{style: 'border:1px solid #e0e0e0;padding: 20px 25px;'}
        = @deal.trade_account_number
      %div{style: 'font-size: 50px;'}
        Trade Account Number

  %div{style: 'margin-top: 50px;'}
    %div{style: 'width:30%;display:inline-block;'}
      %div{style: 'border:1px solid #e0e0e0;padding: 20px 25px;'}
        = @deal.send_payoff_address
      %div{style: 'font-size: 50px;'}
        Send Payoff Address

  %div{style: 'margin-top: 50px;'}
    %div{style: 'width:30%;display:inline-block;'}
      %div{style: 'border:1px solid #e0e0e0;padding: 20px 25px;'}
        = @deal.good_through_date
      %div{style: 'font-size: 50px;'}
        Good Through Date

  %div{style: 'margin-top: 50px;'}
    %div{style: 'width:30%;display:inline-block;'}
      - if @deal.dealer_demo
        &#10004;
      - else
        &#10006;
      Dealer Demo

    %div{style: 'width:30%;display:inline-block;'}
      - if @deal.loaner_car
        &#10004;
      - else
        &#10006;
      Loaner Car
      
  %div{style: 'margin-top: 50px;'}
    %div{style: 'font-size: 50px;'}
      Disclosure
    %div{style: 'border:1px solid #e0e0e0;padding: 20px 25px;'}
      = @deal.disclosure

  %div{style: 'margin-top: 50px;'}
    %div{style: 'font-size: 50px;'}
      Deal Notes
    %div{style: 'border:1px solid #e0e0e0;padding: 20px 25px;'}
      =# @deal.deal_notes



.right-col
  %div{style: 'margin-top: 50px;'}
    %div{style: 'border:1px solid #e0e0e0;padding: 20px 25px;'}
      = @deal.time_agreed
    %div{style: 'font-size: 50px;'}
      Time Agreed

  %div{style: 'margin-top: 50px;'}
    %div{style: 'border:1px solid #e0e0e0;padding: 20px 25px;'}
      = @deal.time_in_finance
    %div{style: 'font-size: 50px;'}
      Time In- Finance

  %div{style: 'margin-top: 50px;'}
    %div{style: 'border:1px solid #e0e0e0;padding: 20px 25px;'}
      = @deal.time_out_finance
    %div{style: 'font-size: 50px;'}
      Time Out- Finance

  %div{style: 'height:130px;'}

  %div{style: 'margin-top: 50px;'}
    %div{style: 'border:1px solid #e0e0e0;padding: 20px 25px;'}
      = number_to_currency(@deal.down_payment)
    %div{style: 'font-size: 50px;'}
      Down Payment

  %div{style: 'margin-top: 50px;'}
    %div{style: 'border:1px solid #e0e0e0;padding: 20px 25px;'}
      = @deal.term
    %div{style: 'font-size: 50px;'}
      Term

  %div{style: 'margin-top: 50px;'}
    %div{style: 'border:1px solid #e0e0e0;padding: 20px 25px;'}
      = number_to_currency(@deal.quoted_payment)
    %div{style: 'font-size: 50px;'}
      Quoted Payment

  %div{style: 'margin-top: 50px;'}
    %div{style: 'border:1px solid #e0e0e0;padding: 20px 25px;'}
      = @deal.rate_apr
    %div{style: 'font-size: 50px;'}
      Rate APR

  %div{style: 'margin-top: 50px;'}
    %div{style: 'border:1px solid #e0e0e0;padding: 20px 25px;'}
      = @deal.miles_per_year
    %div{style: 'font-size: 50px;'}
      Miles Per Year (LSE)

  %div{style: 'margin-top: 50px;'}
    %div{style: 'border:1px solid #e0e0e0;padding: 20px 25px;'}
      = @deal.rebates
    %div{style: 'font-size: 50px;'}
      Rebates

  %div{style: 'margin-top: 50px;'}
    %div{style: 'border:1px solid #e0e0e0;padding: 20px 25px;'}
      = @deal.program_description
    %div{style: 'font-size: 50px;'}
      Program Description

  %div{style: 'margin-top: 50px;'}
    %div{style: 'border:1px solid #e0e0e0;padding: 20px 25px;'}
      = @deal.sales_rep
    %div{style: 'font-size: 50px;'}
      Sales Rep

  %div{style: 'margin-top: 50px;'}
    %div{style: 'border:1px solid #e0e0e0;padding: 20px 25px;'}
      = @deal.split_rep
    %div{style: 'font-size: 50px;'}
      Split Rep

  %div{style: 'margin-top: 50px;'}
    %div{style: 'border:1px solid #e0e0e0;padding: 20px 25px;'}
      = @deal.desk_manager
    %div{style: 'font-size: 50px;'}
      Desk Manager

  %div{style: 'margin-top: 50px;'}
    %div{style: 'border:1px solid #e0e0e0;padding: 20px 25px;'}
      = @deal.finance_manager
    %div{style: 'font-size: 50px;'}
      Finance Manager

  %div{style: 'margin-top: 50px;'}
    %div{style: 'border:1px solid #e0e0e0;padding: 20px 25px;'}
      =# @deal.finance_manager
    %div{style: 'font-size: 50px;'}
      Missing Stips1

  %div{style: 'margin-top: 50px;'}
    %div{style: 'border:1px solid #e0e0e0;padding: 20px 25px;'}
      =# @deal.finance_manager
    %div{style: 'font-size: 50px;'}
      Missing Stips2


%div{style:'clear:both;'}
#footer
  = wicked_pdf_image_tag 'logo.png', style: 'margin:auto; display:block; width: 300px;'

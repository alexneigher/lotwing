$('.loading-spin').addClass('d-none');

<%- if @vehicle %>
  $('#deal_make').val("<%= @vehicle.make %>");
  $('#deal_model').val("<%= @vehicle.model %>");
  $('#deal_year').val("<%= @vehicle.year %>");
  $('#deal_model_code').val("<%= @vehicle.model_code %>");

  $('#deal_is_used').prop('checked', <%= @vehicle.is_used %>);
  $('#deal_certified_pre_owned').prop('checked', <%= @vehicle.certified == "Yes" %>);

<% end %>

<%- if @existing_stock_number_deals %>
  alert('Deal already exists for this stock number');
  $('#deal_stock_number').addClass("is-invalid");
<% end %>
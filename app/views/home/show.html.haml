/ Page Content
= render partial: 'shared/maxbox_dependencies'
= javascript_include_tag('map_builder')
= javascript_include_tag('map_interactor')
.container-fluid
  .row
    .col-lg-4
      %h2.m-0.mt-3 Lot View
      %small.small.text-muted
        - @grouped_shapes.each do |k, v|
          = pluralize(v, k).titleize

      = render partial: 'tags/new'

      %ul.list-group
        - @vehicles.each do |vehicle|
          %li.list-group-item.vehicle-list{id: dom_id(vehicle)}
            .row
              .col
                %i.fa.fa-car
                = vehicle.vin
              .col
                - if vehicle.current_parking_tag.present?
                  Parked
                  = link_to 'Remove Tag', tag_deactivate_path(vehicle.current_parking_tag)
                - else
                  Not Parked

    .col-lg-8
      #map{ :style => "width: 100%; height: 550px;border: 1px solid #dee2e6;" }
  
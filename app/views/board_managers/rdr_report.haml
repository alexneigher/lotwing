.container-fluid
  .row.mb-1
    .col-md-2
      %h3 MTD New Vehicle RDR Report
      %small
        .text-center
          = "(since #{current_user.dealership.custom_mtd_start_date || "N/A"})"
      = link_to '< Board Manager', board_manager_path()

      .card.text-center.mt-5
        .card-header
          Sales MTD (#{@grouped_deals.values.map(&:count).sum})
        .card-body.small
          %small
            - @grouped_deals.reverse_each do |model, deals|
              = model
              = " (#{deals.count})"
              %hr.my-1
    .col-md-10   
      .table-responsive.small{style: 'max-height: 80vh;'}
        %table.table.table-striped.table-sm.mb-0.board-manager-table
          %thead
            %tr
              %th
                %i.fa.fa-pencil
              %th Date
              %th Model Code
              %th Deal Status
              
              
          %tbody
            - @grouped_deals.reverse_each do |model, deals|
              %tr
                %td.bg-light{colspan: 4}
                  %strong
                    = model
                    = " (#{deals.count})"
              - deals.each do |deal|
                %tr.text-blue
                  %td
                    - unless current_user.permission_level == "service_user"
                      = link_to edit_deal_path(deal) do
                        %i.fa.fa-pencil.edit-icon
                  %td= deal.deal_date
                  %td= deal.vehicle&.model_code
                  %td= deal.deal_status
        

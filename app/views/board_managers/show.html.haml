.container-fluid
  .row.mb-1
    .col-md-2
      %h3 Sales Board
    .col-md-10
      = link_to 'New Entry', new_deal_path, class: 'btn btn-primary btn-sm'
  .row
    .col-md-2
    .col-md-10
      .table-responsive.small
        %table.table.table-striped.table-sm.mb-0.board-manager-table
          %thead
            %tr
              %th
                %i.fa.fa-pencil
              %th Last
              %th Stock #
              %th Source
              %th New
              %th Used
              %th Trade
              %th Sales Rep
              %th Split
              %th City
              %th Result
              %th RDR
              
          %tbody
            - @deals.each do |deal|
              %tr
                %td
                  = link_to edit_deal_path(deal) do
                    %i.fa.fa-pencil.edit-icon
                %td= deal.client_last_name
                
                %td= deal.stock_number
                
                %td= deal.source
                
                - if deal.is_used
                  %td
                  %td
                    = deal.make
                    = deal.model
                    = deal.year
                - else
                  %td
                    = deal.make
                    = deal.model
                    = deal.year
                  %td

                %td= deal.trade
                %td= deal.sales_rep
                %td= deal.split_rep
                %td= deal.city
                %td= deal.result
                %td RDR
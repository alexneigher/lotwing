.container-fluid
  .row.mb-1
    .col-md-2
      %h3 Sales Board
    .col-md-10
      = link_to 'New Entry', new_deal_path, class: 'btn btn-primary btn-sm'
      = form_for :filters, url: board_manager_path, method: :get do
        .row.pt-1
          .col-md-3.pt-1 
            %label
              = check_box_tag "filters[mtd]", 1, params.dig(:filters, :mtd)&.present? ? true : false
              MTD
              %small.text-muted
                (since #{current_user.dealership.custom_mtd_start_date})
          .col-md-2
            = text_field_tag "filters[query]", params.dig(:filters, :query), placeholder: 'Johnson', class: 'form-control form-control-sm'
          .col-md-1
            = submit_tag 'Filter', class: 'btn btn-sm btn-outline-secondary'
  .row
    .col-md-2
    .col-md-10
      .table-responsive.small
        %table.table.table-striped.table-sm.mb-0.board-manager-table
          %thead
            %tr
              %th
                %i.fa.fa-pencil
              %th Last
              %th Stock #
              %th Source
              %th New
              %th Used
              %th Trade
              %th Sales Rep
              %th Split
              %th City
              %th Result
              %th RDR
              
          %tbody
            - @deals.each do |deal|
              %tr
                %td
                  = link_to edit_deal_path(deal) do
                    %i.fa.fa-pencil.edit-icon
                %td= deal.client_last_name
                
                %td= deal.stock_number
                
                %td= deal.source
                
                - if deal.is_used
                  %td
                  %td
                    = deal.make
                    = deal.model
                    = deal.year
                - else
                  %td
                    = deal.make
                    = deal.model
                    = deal.year
                  %td

                %td= deal.trade
                %td= deal.sales_rep
                %td= deal.split_rep
                %td= deal.city
                %td= deal.result
                %td= deal.report_status
.container
  .row.justify-content-center
    .col-md-6.mt-5
      .card.mt-5
        .card-body
          %h4.text-center Forgot your password?
          = form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f|
            .form-group
              %label Email
              = f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control', placeholder: 'your@email.com'

            .actions.text-center
              = f.submit "Send me reset password instructions", class: 'btn btn-primary'
            
        .card-footer
          = render "devise/shared/links"


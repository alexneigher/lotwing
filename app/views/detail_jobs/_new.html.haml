#newDetailJob.modal{"aria-hidden" => "true", "aria-labelledby" => "genericModalLabel", :role => "dialog", :tabindex => "-1"}
  .modal-dialog.modal-lg{:role => "document"}
    .modal-content
      .modal-body
        = form_for current_user.dealership.detail_jobs.new() , url: detail_jobs_path, method: :post do |f|
          = render partial: 'detail_jobs/form', locals: {f: f, action: 'new'}
          .row
            .col-12
              = f.submit "Create Job", class: 'btn btn-primary'


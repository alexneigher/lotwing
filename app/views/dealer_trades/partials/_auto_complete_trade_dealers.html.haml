.bg-light
  .card-body.pt-1
    .text-center.mb-1
      %strong Suggested Trade Dealerships
    %ul.list-group
      - @dealer_trades.each do |d|
        %li.list-group-item.py-1
          .text-success.suggested-dealership{ style:'cursor:pointer;', data: { trade_dealer_name: d.trade_dealer_name, trade_dealer_address: d.trade_dealer_address, trade_dealer_contact: d.trade_dealer_contact, trade_contact_phone:  d.trade_contact_phone } }
            = d.trade_dealer_name
            = " | #{d.trade_dealer_contact} (#{d.trade_contact_phone})"



:javascript
  $(function(){
    $('.suggested-dealership').click(function(){
     var trade_dealer_name = $(this).data('trade-dealer-name');
     var trade_dealer_address = $(this).data('trade-dealer-address');
     var trade_dealer_contact = $(this).data('trade-dealer-contact');
     var trade_contact_phone = $(this).data('trade-contact-phone');


     $("#dealer_trade_trade_dealer_name").val(trade_dealer_name);
     $("#dealer_trade_trade_dealer_address").val(trade_dealer_address);
     $("#dealer_trade_trade_dealer_contact").val(trade_dealer_contact);
     $("#dealer_trade_trade_contact_phone").val(trade_contact_phone);


     $('#autoCompleteDealerTrades').html('');
    })
  })